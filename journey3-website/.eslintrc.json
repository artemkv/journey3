{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "google"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": "off",
        "react/display-name": "off",
        "max-len": [
            "error",
            {
                "code": 120
            }
        ],
        "require-jsdoc": "off",
        "indent": [
            "error",
            4
        ],
        "react/prop-types": "off",
        "comma-dangle": [
            "error",
            "never"
        ]
    }
}
